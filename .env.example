# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration  
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini-2025-04-14

# Replicate API Configuration
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Clarifai Configuration (at least one required)
CLARIFAI_PAT=your_general_clarifai_pat_here
CLARIFAI_TANK_PAT=your_tank_specific_clarifai_pat_here  
CLARIFAI_PLANT_PAT=your_plant_specific_clarifai_pat_here

# Webhook Configuration (for production deployment)
WEBHOOK_URL=https://your-cloud-run-service-url.a.run.app
WEBHOOK_PORT=8080

# FFmpeg Path (for local development on Windows)
FFMPEG_PATH=C:/ffmpeg/ffmpeg-7.1.1-essentials_build/bin/ffmpeg.exe

# Development vs Production Mode
# Leave WEBHOOK_URL empty for development (polling mode)
# Set WEBHOOK_URL for production (webhook mode)